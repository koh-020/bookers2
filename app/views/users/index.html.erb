
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">

      <h1>Users</h1>
      <table class="table">
        <thead>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td class="align-middle"><%= user.name %></td>
              <td class="align-middle"><%= link_to "Show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
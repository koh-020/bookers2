<!DOCTYPE html>

<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
          <div class="container-fluid mx-5">
            <a class="navbar-brand" href="/">Bookers</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarDark" aria-controls="navbarDark" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarDark" style="">
              <ul class="navbar-nav me-auto mb-5 mb-xl-0">
                <li class="nav-item m-3">
                  <%= link_to user_path(current_user.id), class: "text-light font-weight-bold nav-link" do %>
                      <i class="fas fa-home"></i> Home
                  <% end %>
                </li>
                <li class="nav-item m-3">
                  <%= link_to users_path, class: "text-light font-weight-bold nav-link" do %>
                      <i class="fas fa-users"></i> Users
                  <% end %>
                </li>
                <li class="nav-item m-3">
                  <%= link_to books_path, class: "text-light font-weight-bold nav-link" do %>
                      <i class="fas fa-book-open"></i> Books
                  <% end %>
                </li>
                <li class="nav-item m-3">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light font-weight-bold" do %>
                    <i class="fas fa-sign-out-alt"></i> Log out
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>


      <% else %>
        <nav class="navbar navbar-expand-xl navbar-dark bg-dark">
          <div class="container-fluid col-lg-10 offset-1">
            <a class="navbar-brand" href="/">Bookers</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarDark" aria-controls="navbarDark" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarDark" style="">
              <ul class="navbar-nav me-auto mb-2 mb-xl-0">
                <li class="nav-item m-3">
                  <%= link_to root_path, class: "text-light font-weight-bold nav-link" do %>
                    <i class="fas fa-home"></i> Home
                  <% end %>
                </li>
                <li class="nav-item m-3">
                  <%= link_to "/home/about", class: "text-light font-weight-bold nav-link" do %>
                    <i class="fas fa-link"></i> About
                  <% end %>
                </li>

                <li class="nav-item m-3">
                  <%= link_to new_user_registration_path, class: "text-light font-weight-bold nav-link" do %>
                    <i class="fas fa-user-plus"></i> Sign up
                  <% end %>
                </li>
                <li class="nav-item m-3">
                  <%= link_to new_user_session_path, class: "nav-link text-light font-weight-bold" do %>
                    <i class="fas fa-sign-in-alt"></i> Log in
                  <% end%>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <% end %>
    </header>

    <main class="mt-3">

      <!--<#% if user_signed_in? %>-->
        <div class="text-success">
          <%= flash[:notice] %>
        </div>

      <!--<#% end %>-->

      <%= yield %>
    </main>
    <footer class="container text-center my-5">
      CopyRight Infratop.inc
    </footer>
  </body>
</html>

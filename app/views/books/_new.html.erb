<div class="mt-3">
 <h1>New book</h1>
    <%=form_with model: book, local: true do |f| %>
      <label for="Title">Title</label><br>
      <%= f.text_field :title %><br>
      <label for="Body">Opinion</label><br>
      <%= f.text_area :body %><br>
      <%= f.submit "Create Book", class: "btn btn-success" %>
    <% end %>
</div>

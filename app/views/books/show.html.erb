<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user_info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table">
          <thead>
            <tr>
              <th> User</th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center">
                <%= image_tag @user.get_profile_image(50, 50) %><br>
                <%= link_to @user.name, user_path(@user) %>
              </td>
              <td class="align-middle">
                <%= @book_detail.title %>
              </td>
              <td class="align-middle">
                <%= @book_detail.body %>
              </td>
              <td class="align-middle">
              <% if @user.id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book_detail), class: "btn btn-success" %>
                </td>
                <td class="align-middle">
                  <%= link_to "Destroy", book_path(@book_detail), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger" %>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>


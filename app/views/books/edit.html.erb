<div class="w-100 d-flex justify-content-center">
  <div class="w-50">
    <h1>Editing Book</h1>

    <% if @book.errors.any? %>
      <div class="text-danger ml-5">
        <h1><span class=""><%= @book.errors.count %> errors prohibited this objects from being saved:</span></h1>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @book, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title", :class => "form-label" %>
        <%= f.text_field :title, :class => "form-control"  %><br>
      </div>
      <div class="form-group">
        <%= f.label :body, "Opinion", :class => "form-label" %><br>
        <%= f.text_area :body, :class => "form-control" %><br>
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
    <%= link_to "Show", book_path(@book) %>
     |
    <%= link_to "Back", books_path %>
  </div>
</div>
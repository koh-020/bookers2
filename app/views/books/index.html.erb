<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
        <div class="text-danger ml-5">
          <h1><span class=""><%= @book.errors.count %> erros prohibited this objects from being saved:</span></h1>
          <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
          </ul>
        </div>
    <% end %>

    <div class="col-md-3">

      <%= render 'user_info', user: current_user %>
      <%= render 'new', book: @book %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>

      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(50, 50) %>
              <% end %>
            </td>
            <td class="align-middle"><%= link_to book.title, book_path(book) %></td>
            <td class="align-middle"><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


    </div>
  </div>
</div>